<h3>@Model.currentCategory</h3>
<div class="row row-cols-1 row-cols-md-2 row-cols-xl-3">
    @{
        foreach (var car in Model.getAllCars) {
            <div class="col mb-4">
                <div class="card h-100">
                        <div class="card-body">
                            <h4 class="card-title">@car.name</h4>
                            <img src="@car.img" alt="photo" />
                            <p class="card-text">@car.shortDesc</p>
                            <p class="card-text">@car.price</p>
                        </div>
                    <div class="card-footer border-top-0">
                        <div class="form-row justify-content-between">
                            <div class="col-12 col-sm-auto">
                                <button class="btn btn-primary w-100">Подробнее</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>